<LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_main"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_margin="16dp" android:layout_weight="1">

            <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_centerInParent="true"
                      android:id="@+id/txtInput" android:hint="Enter text to speak ..."
                      android:textStyle="italic" android:padding="10dp"
                      android:background="@drawable/back_txt_input"
                      android:textColor="#000000" android:textSize="26sp"
                      android:scrollbarFadeDuration="0"
                      android:scrollbars="vertical"
                      android:scrollbarAlwaysDrawVerticalTrack="true"
                      android:textColorHint="#031896" android:gravity="start">
                <requestFocus/>
            </EditText>

            <ImageButton android:layout_width="55dp" android:layout_height="70dp"
            android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            android:src="@drawable/ic_clear_all" android:scaleType="fitXY"
            android:background="#00000000" android:tint="#FFFFFF"
            android:id="@+id/btnClearTxt"/>

        </RelativeLayout>



        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_margin="16dp" android:layout_weight="3"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1" android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_weight="1" android:gravity="center_vertical|start">


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_weight="1" android:gravity="center_horizontal|bottom"
                                android:orientation="horizontal">

                    <ImageButton android:layout_width="60dp" android:layout_height="60dp"
                                 android:background="#00000000"
                                 android:src="@drawable/ic_exit" android:scaleX="-1"
                                 android:scaleType="fitXY" android:tint="#FA1604"
                                 android:layout_marginEnd="20dp"
                                 android:id="@+id/btnExit"/>


                    <ImageButton android:layout_width="60dp" android:layout_height="60dp"
                                 android:background="#00000000"
                                 android:src="@drawable/ic_info"
                                 android:scaleType="fitXY" android:tint="#1FBD1F"
                                 android:id="@+id/btnInfo"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1" android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_weight="1" android:gravity="end|top">

                    <ImageButton android:layout_width="60dp" android:layout_height="60dp"
                                 android:src="@drawable/ic_voice"
                                 android:background="#00000000" android:scaleType="fitXY"
                                 android:id="@+id/btnVoices"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_weight="1" android:gravity="end|bottom">

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="SPEAK" android:textSize="26sp"
                            android:paddingStart="10dp"  android:paddingEnd="10dp"
                            android:background="@drawable/back_btn_speak"
                            android:id="@+id/btnSpeak"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




</LinearLayout>